<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/activity_first_container_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/activity_first_text_fishtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-black"
            android:paddingBottom="50dp"
            android:text="@string/text_fishtext"
            android:textAlignment="textStart"
            android:textSize="18sp" />
    </ScrollView>

    <Button
        android:id="@+id/activity_first_button_to_second_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:background="@color/colorLightPink"
        android:fontFamily="sans-serif-black"
        android:text="@string/button_to_second_screen"
        android:textSize="18sp" />
</FrameLayout>
